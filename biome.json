{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "error"
			},
			"complexity": {
				"noForEach": "off"
			},
			"style": {
				"useConsistentArrayType": "error",
				"useExplicitLengthCheck": "error"
			},
			"suspicious": {
				"useAwait": "error"
			}
		}
	}
}
